    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "program": "/Library/Frameworks/R.framework/Resources/bin/exec/R",
            "args": [
                "--vanilla",
                "-e",
                "source('tools/debug.R')"
            ],
            "env": {
                "R_HOME" : "/Library/Frameworks/R.framework/Resources"
            },
            "terminal": "console",
            "stopOnEntry": false
        }
    ]
}